<form action="<%= create_path %>" method="post">
  <label for="deployment-name">Name:</label>
  <input id="deployment-name" name="name" type="text">
  <input type="submit" value="create">
</form>

<ul>
<% deployments.each do |deployment| %>
  <li><a href="<%= deployment_path(deployment.id) %>"><%= deployment.name %></a></li>
<% end %>
</ul>
